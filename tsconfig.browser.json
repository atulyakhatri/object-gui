{
  "compilerOptions": {
    "target": "ES2017",
    "module": "esnext",
    "lib": [
      "ESNext",
      "ES2022",
      "ES2021",
      "ES2020",
      "ES2019",
      "ES2018",
      "ES2017",
      "ES2016",
      "ES2015",
      "DOM"
    ],
    "declaration": true,
    "outDir": "./dist/js",
    "rootDir": "./src/ts",
    "removeComments": true,
    "importHelpers": false,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "./tests/",
    "./node_modules/",
    "../../node_modules/",
    "./dist/",
    "./typedoc/",
    "./docs/"
  ]
}
